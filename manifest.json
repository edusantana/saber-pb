{
	"manifest_version": 2,
	"version": "2020.04.05",
	"name": "Saber PB",
	"short_name": "saber-pb",
	"description": "Auxilia os professores do governo do estado da Paraíba agilizando a edicação da plataforma do saber.",
	"homepage_url" : "https://github.com/edusantana/saber-pb",
	"permissions": [
		"storage"
	],
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"http://www.saber.pb.gov.br/platform/*",
				"http://saber.pb.gov.br/platform/*"
			],
			"js": [
				"saber.js"
			]
		}
	]
}
