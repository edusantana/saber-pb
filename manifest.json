{
	"manifest_version": 2,
	"version": "2020.05.12",
	"name": "Saber PB",
	"short_name": "saber-pb",
	"description": "Auxilia os professores do governo do estado da Paraíba agilizando a edicação da plataforma do saber.",
	"homepage_url" : "https://edusantana.github.io/saber-pb/",
	"permissions": [
		"storage"
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"http://www.saber.pb.gov.br/platform/*",
				"http://saber.pb.gov.br/platform/*"
			],
			"js": [
				"saber.js"
			]
		}
	]
}
